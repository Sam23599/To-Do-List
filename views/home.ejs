<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <script src="https://kit.fontawesome.com/1d176c0d0a.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="/css/home.css">
</head>

<body>
    <div class="container">

        <div>
            <h1 style="margin: auto;">ToDo App</h1>
        </div>

        <div id="form-block">
            <form action="/add-task" id="category_Form" method="POST">

                <div id="description" class="input-align">
                    <p>Description</p>
                    <input type="text" name="description" placeholder="What do you need to do?">
                </div>

                <div id="details">
                    <div id="category" class="input-align">
                        <label for="catg">Category</label>
                        <select name="catg" id="catg">
                            <option value="personal">Personal</option>
                            <option value="work">Work</option>
                            <option value="school">School</option>
                            <option value="cleaning">Cleaning</option>
                            <option value="other">Others</option>
                        </select>
                    </div>

                    <div id="dueDate" class="input-align">
                        <label for="due_date" style="display: block;">Due Date</label>
                        <input type="date" id="due_date" name="due_date">

                    </div>
                </div>

                <div id="buttons">
                    <div class="add-button">
                        <button type="button" id="addTask">
                            <i class="fa-solid fa-user-plus"></i>
                            Add Task
                        </button>
                    </div>
                    <div class="delete-button">
                        <button type="button" id="deleteTask">
                                <i class="fa-solid fa-eraser" style="color: steelblue;"></i>
                            Delete Task
                        </button>
                    </div>
                </div>

            </form>



        </div>

        <div id="task-list">
            <ul>
                <% for( let i of List ) { %>
                    <li>
                        <div id="task-list">
                            
                            <p id="descripted">
                                <label>
                                    <input type="checkbox" class="delete-checkbox" name="selectedItems" value="<%= i._id %>">
                                    <i class="fa-regular fa-address-card" style="font-size: 1.6rem; color: grey; margin-left: 1rem;"></i>
                                    <%= i.description %>
                                </label>
                            </p>
                            <p id="dated">
                                <%= i.date %>
                            </p>
                            <p id="categored">
                                <%= i.category %>
                            </p>
                        </div>
                        
                    </li>
                    <% } %>

            </ul>

        </div>


    </div>

    <script type="module" src="/js/home.js"></script>
</body>

</html>